@using SolucionCreditos.Entities
@model List<Movimiento>

<div class="mb-3">

    <a class="btn btn-primary" asp-controller="Cuentas" asp-action="Index" asp-route-id="@ViewBag.idCliente">Volver</a>

    <a class="btn btn-primary" asp-action="NuevoMovimiento" asp-route-id="@ViewBag.idCuenta">Nuevo Movimiento</a>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Concepto</th>
            <th>Monto</th>
            <th>Tipo Movimiento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdMovimiento</td>
                <td>@item.TipoMovimiento.Concepto</td>
                <td>@item.Monto</td>
                <td>
                    <div class="form-check">
                        @if (item.TipoMovimiento.Deposito)
                        {
                            <input class="form-check-input" type="checkbox" value="" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="">
                        }
                        <label class="form-check-label" for="flexCheckDefault">
                            Entrada
                        </label>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
