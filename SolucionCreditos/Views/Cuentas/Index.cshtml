@model List<Cuenta>
@using SolucionCreditos.Entities;

<div class="mb-3">
    <a class="btn btn-info" asp-controller="Cuentas" asp-action="Crear" asp-route-id="@ViewBag.idCliente">Crear cuenta</a>
    <a class="btn btn-secondary" asp-controller="Clientes" asp-action="Index" asp-route-id="@ViewBag.idCliente">Volver</a>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Cuentas</th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.IdCuenta</td>
            <td>@item.NumeroCuenta</td>
            <td>@item.Saldo</td>
            <td>
                <a class="btn btn-primary" asp-controller="Movimientos" asp-action="Index" asp-route-id="@item.IdCuenta">Movimientos</a>
            </td>

        </tr>
        }
    </tbody>
</table>
