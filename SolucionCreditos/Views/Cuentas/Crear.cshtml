@using SolucionCreditos.Entities

@model Cuenta


<form method="post">
    <div>
        <div class="form-group">
            <label>Numero de cuenta</label>
            <input class="form-control" asp-for="NumeroCuenta" required />
        </div>

        <div class="form-group">
            <label>Saldo</label>
            <input class="form-control" asp-for="Saldo"  required />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>